<div class="card">
  <div class="card-header">
    <h4>Edit User<% resource_name.to_s.humanize %></h4>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, class:"form-control form-control-lg", placeholder:"Email", autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="mb-3">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password,class:"form-control form-control-lg", placeholder:"Password", autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class:"form-control form-control-lg", placeholder:"Password Confirmation", autocomplete: "new-password" %>
  </div>

  <div class="mb-3">
    <%= f.label :current_password %><br />
    <%= f.password_field :current_password, class:"form-control form-control-lg", placeholder:"Current passsword", autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: "btn btn-secondary" %>
  </div>
  <br/>
<% end %>


  </div>
</div>
<br>
<div class="card">
  <div class="card-body">
    <h3>Cancel my account</h3>
    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>
  </div>
</div>




